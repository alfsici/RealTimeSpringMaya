<Window x:Class="PhoenixControlLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        xmlns:pcl="clr-namespace:PhoenixControlLib;assembly=PhoenixControlLib">
    <StackPanel Margin="20" >
        <pcl:NumericSpinnerControl Width="100" Minimum="0" Value="1" IncrementValue="0.5"/>

        <GroupBox Header="Group 1">
            <StackPanel Width="60" >
                <pcl:RadioToggleButton x:Name="G1A" Height="60"  Content="Choice A" GroupName="Test1"/>
                <pcl:RadioToggleButton x:Name="G1B" Height="60" Content="Choice B" GroupName="Test1"/>
                <pcl:RadioToggleButton x:Name="G1C" Height="60" Content="Choice C" GroupName="Test1"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
